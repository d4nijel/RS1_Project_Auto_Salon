
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/nav_Layout.cshtml";
}

@model AutoSalon.Web.ViewModels.DashboardVM

<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-users fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.BrojKlijenata</div>
                        <div>Broj klijenata</div>
                    </div>
                </div>
            </div>
            <a href="/Iznajmljivanje/Klijenti">
                <div class="panel-footer">
                    <span class="pull-left">Pregled klijenata</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-car fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.BrojVozila</div>
                        <div>Broj vozila</div>
                    </div>
                </div>
            </div>
            <a href="/Iznajmljivanje/Vozila">
                <div class="panel-footer">
                    <span class="pull-left">Pregled vozila</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-exchange fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.BrojRentacar</div>
                        <div>Broj rent-a-car stavki</div>
                    </div>
                </div>
            </div>
            <a href="/Iznajmljivanje/Rentacar">
                <div class="panel-footer">
                    <span class="pull-left">Pregled rent-a-car stavki</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-file fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.BrojIzvjestaja</div>
                        <div>Broj izvještaja</div>
                    </div>
                </div>
            </div>
            <a href="/Iznajmljivanje/Izvjestaji">
                <div class="panel-footer">
                    <span class="pull-left">Pregled izvještaja</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shield fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.BrojOsiguranja</div>
                        <div>Broj osiguranja</div>
                    </div>
                </div>
            </div>
            <a href="/Iznajmljivanje/Osiguranja">
                <div class="panel-footer">
                    <span class="pull-left">Pregled polica osiguranja</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>