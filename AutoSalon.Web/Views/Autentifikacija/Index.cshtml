@model AutoSalon.Web.ViewModels.AutentifikacijaVM
@{
    ViewData["Title"] = "Prijava";

    string error_poruka = (string)TempData["error_poruka"];
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Prijava</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Prijava" asp-controller="Autentifikacija">
                        <fieldset>
                            <div class="form-group">
                                <input asp-for="Username" class="form-control" placeholder="Korisničko ime" autofocus>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control" placeholder="Lozinka" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Prijavi se" />
                        </fieldset>
                    </form>
                    @if (error_poruka != null)
                    {
                        <br />
                        <div style="text-align:center" class="alert alert-danger">
                            @error_poruka
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" style="color:gray; font-style: italic">
