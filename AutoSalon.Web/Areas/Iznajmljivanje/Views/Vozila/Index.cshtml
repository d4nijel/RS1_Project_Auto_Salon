
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/nav_Layout.cshtml";
    int brojac = 1;
}

@model AutoSalon.Web.Areas.Iznajmljivanje.ViewModels.VozilaIndexVM



<div class="panel panel-default">
    <div class="panel-heading">
        Vozila
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length" id="dataTables-example_length">



                        <div id="dataTables-example_filter" class="dataTables_filter" style="width:max-content">
                            <label>Pretraga(model):   <input type="search" id="txtVozilaPretraga" class="form-control input-sm" placeholder=""></label>
                            <a id="btnVozilaPretraga" href="#" class="btn btn-primary">Pretraži</a>
                            <a href="/Iznajmljivanje/Vozila/Dodaj" class="btn btn-success">Dodaj vozilo</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline collapsed" id="dataTables-example" role="grid" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th>Rbr.</th>
                                    <th>Naziv vozila</th>
                                    <th>Tip vozila</th>
                                    <th>Godina proizvodnje</th>
                                    <th>Iznajmljen</th>
                                    <th>Cijena</th>
                                    <th>Akcija</th>
</thead>
                            <tbody>
                                @foreach (var x in Model.rows)
                                {
                                    <tr>
                                        <th scope="row">@(brojac++)</th>
                                        <td>@x.naziv</td>
                                        <td>@x.tipVozila</td>
                                        <td>@x.godiste</td>
                                        <td>
                                            @((x.iznajmljen) ? "Da" : "Ne")
                                        </td>
                                        <td>@x.cijena KM</td>
                                        <td>
                                            <a class="btn btn-warning" href="/Iznajmljivanje/Vozila/Uredi/@x.voziloId">Detalji</a>
                                            <a class="btn btn-light" href="/Iznajmljivanje/Osiguranja/Dodaj/@x.voziloId">Osiguraj</a>
                                            <a class="btn btn-danger" href="/Iznajmljivanje/Vozila/Obrisi/@x.voziloId">Obriši</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">

                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>



