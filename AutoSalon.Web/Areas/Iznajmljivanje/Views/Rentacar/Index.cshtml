
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/nav_Layout.cshtml";
    int brojac = 1;
}

@model AutoSalon.Web.Areas.Iznajmljivanje.ViewModels.RentacarIndexVM



<div class="panel panel-default">
    <div class="panel-heading">
        Rent-a-car
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length" id="dataTables-example_length">



                        <div id="dataTables-example_filter" class="dataTables_filter" style="width:max-content">
                            <label>Pretraga(klijent):   <input type="search" id="txtRentacarPretraga" class="form-control input-sm" placeholder=""></label>
                            <a id="btnRentacarPretraga" href="#" class="btn btn-primary">Pretraži</a>
                            <a href="/Iznajmljivanje/Rentacar/Dodaj" class="btn btn-success">Dodaj rent-a-car stavku</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline collapsed" id="dataTables-example" role="grid" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th>Rbr.</th>
                                    <th>Vozilo</th>
                                    <th>Klijent</th>
                                    <th>Zaposlenik</th>
                                    <th>Datum rentanja</th>
                                    <th>Datum isteka</th>
                                    <th>Cijena</th>
                                    <th>Akcija</th>
</thead>
                            <tbody>
                                @foreach (var x in Model.rows)
                                {
                                <tr>
                                    <th scope="row">@(brojac++)</th>
                                    <td>@x.vozilo</td>
                                    <td>@x.klijent</td>
                                    <td>@x.zaposlenik</td>
                                    <td>@x.datumRentanja.ToShortDateString() @x.datumRentanja.ToShortTimeString()</td>
                                    <td>@x.datumIsteka.ToShortDateString() @x.datumIsteka.ToShortTimeString()</td>
                                    <td>@x.cijena KM</td>
                                    <td>
                                        <a href="/Iznajmljivanje/Rentacar/Uredi/@x.rentId" class="btn btn-warning">Detalji</a>
                                        <a href="/Iznajmljivanje/Rentacar/Obrisi/@x.rentId" class="btn btn-danger">Obriši</a>
                                        @if (!x.isZavrseno)
        {
                                <a href="/Iznajmljivanje/Rentacar/Zavrsi/@x.rentId" class="btn btn-light">Završi</a>
}
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">

                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>
