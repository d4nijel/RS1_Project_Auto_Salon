
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/nav_Layout.cshtml";
    int brojac = 1;
}

@model AutoSalon.Web.Areas.Iznajmljivanje.ViewModels.KlijentIndexVM


<div class="panel panel-default">
    <div class="panel-heading">
        Klijenti
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row"><div class="col-sm-6">
    <div class="dataTables_length" id="dataTables-example_length">

        

        <div id="dataTables-example_filter" class="dataTables_filter" style="width:max-content">
            <label>Pretraga(ime/prezime):   <input type="search" id="txtKlijentPretraga" class="form-control input-sm" placeholder=""></label>
            <a id="btnKlijentPretraga" href="#" class="btn btn-primary">Pretraži</a>
            <a href="/Iznajmljivanje/Klijenti/Dodaj" class="btn btn-success">Dodaj klijenta</a>
        </div>
            </div>
                 </div>
            <div class="row">
                <div class="col-sm-12">
                    <br />
                    <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline collapsed" id="dataTables-example" role="grid" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <th>Rbr.</th>
                                <th>Ime i prezime</th>
                                <th>Adresa</th>
                                <th>Telefon</th>
                                <th>Akcija</th>
</thead>
                        <tbody>
                            @foreach (var x in Model.rows)
    {
                        <tr>
                            <th scope="row">@(brojac++)</th>
                            <td>@x.imePrezime</td>
                            <td>@x.adresa</td>
                            <td>@x.telefon</td>
                            <td>
                                <a href="/Iznajmljivanje/Klijenti/Uredi/@x.klijentId" class="btn btn-warning">Detalji</a>
                                <a href="/Iznajmljivanje/Klijenti/Obrisi/@x.klijentId" class="btn btn-danger openDialog">Obriši</a>
                            </td>
                        </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
                <div class="row">
                    <div class="col-sm-6">
               
        <!-- /.table-responsive -->
       
                    </div>
    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
</div>
