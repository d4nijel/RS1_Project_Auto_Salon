@model IzvjestajiDodajVM
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_Layout_Prodaja.cshtml";
}
<form asp-action="Snimi">
    <input asp-for="ZaposlenikId" hidden />
    <input asp-for="DatumKreiranja" hidden />
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Dodavanje novog izvještaja</b>
        </div>
        <div class="panel-body">
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Datum kreiranja: </label>
                        <input asp-for="Datum" class="form-control" readonly/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Naziv: </label>
                        <p style="color:red; display:inline">*</p>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Sadržaj: </label>
                        <p style="color:red; display:inline">*</p>
                        <textarea asp-for="Sadrzaj" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Napomena: </label>
                        <input asp-for="Napomena" class="form-control" />
                        <span asp-validation-for="Napomena" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <br />
            <p style="color:red; display:inline">*Obavezno polje</p>
            <button type="submit" style="float:right; width:20%" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
</form>