@model NarudzbeDodajVM
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_Layout_Prodaja.cshtml";
}
<form asp-action="Snimi">
    <input asp-for="DatumNarudzbe" hidden />
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Dodavanje nove narudžbe</b>
        </div>
        <div class="panel-body">
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Datum narudžbe: </label>
                        <input asp-for="Datum" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Klijent: </label>
                        <p style="color:red; display:inline">*</p>
                        <select asp-for="KlijentId" asp-items="@Model.Klijenti" class="form-control"></select>
                    </div>
                    <div class="col-xs-12 col-md-4">
                    </div>
                    <div class="col-xs-12 col-md-4">
                    </div>
                </div>
            </div>
            <br />
            <p style="color:red; display:inline">*Obavezno polje</p>
            <button type="submit" style="float:right; width:20%" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
</form>