@model KlijentiDodajVM
@{
    ViewData["Title"] = "Detalji";
    Layout = "~/Views/Shared/_Layout_Prodaja.cshtml";
}
@section Scripts {
    <script>
        $(document).ready(function () {
            $.get("/Prodaja/Narudzbe/IndexZavrsene?id=@Model.KlijentId",
                function (rezultat, state) {
                    $("#NarudzbeDetaljiNekiId").html(rezultat);
                });
        });
    </script>
}
<form asp-action="Snimi">
    <input asp-for="KlijentId" type="hidden" />
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Detalji o klijentu / izmjena podataka</b>
        </div>
        <div class="panel-body">
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Ime: </label>
                        <input asp-for="Ime" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Spol: </label>
                        <p style="color:red; display:inline">*</p>
                        <select asp-for="Spol" class="form-control">
                            <option value="M">Muško</option>
                            <option value="Z">Žensko</option>
                        </select>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Adresa: </label>
                        <p style="color:red; display:inline">*</p>
                        <input asp-for="Adresa" class="form-control" />
                        <span asp-validation-for="Adresa" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Prezime: </label>
                        <input asp-for="Prezime" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Email: </label>
                        <p style="color:red; display:inline">*</p>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Grad: </label>
                        <p style="color:red; display:inline">*</p>
                        <select asp-for="GradId" asp-items="@Model.Gradovi" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>JMBG: </label>
                        <input asp-for="JMBG" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Telefon: </label>
                        <p style="color:red; display:inline">*</p>
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Poštanski broj: </label>
                        <p style="color:red; display:inline">*</p>
                        <input asp-for="PostanskiBroj" class="form-control" />
                        <span asp-validation-for="PostanskiBroj" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                        <label>Datum rođenja: </label>
                        <input type="date" asp-for="DatumRodjenja" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
                <div class="col-xs-12 col-md-4">
                </div>
            </div>
            <br />
            <p style="color:red; display:inline">*Obavezno polje</p>         
            <div style="float:right;">
                <a asp-action="NazadIndex" style="float:left; margin-right:10px" class="btn btn-info">Nazad</a>
                <button type="submit" style="float:right" class="btn btn-primary">Izmijeni</button>
            </div>
        </div>
    </div>
</form>
<div id="NarudzbeDetaljiNekiId"></div>